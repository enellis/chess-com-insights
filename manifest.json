{
  "name": "Chess.com Insights",
  "description": "Shows Win/Lose/Draw and average accuracy for players on chess.com",
  "author": "thieleju",
  "manifest_version": 3,
  "version": "1.3",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["activeTab", "scripting", "webRequest", "storage", "tabs"],
  "action": {
    "default_locale": "en",
    "default_title": "Chess.com Insights",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://*.chess.com/*"],
      "js": ["chess-com-insights.js"],
      "run_at": "document_end"
    }
  ]
}
